{
    "require-dev": {
        "phpunit/phpunit": "9.1",
        "phpstan/phpstan": "^0.12.19",
        "phpstan/phpstan-phpunit": "^0.12.8",
        "symplify/easy-coding-standard": "^7.2",
        "symplify/phpstan-extensions": "^7.2",
        "nunomaduro/larastan": "^0.5.5",
        "emielmolenaar/phpcs-laravel": "^1.2",
        "barryvdh/laravel-ide-helper": "^2.7"
    },
    "scripts": {
        "checkcode": "phpcs app tests --standard=PSR12",
        "fixcode": "phpcbf app tests --standard=PSR12",
        "test": "phpunit",
        "tests": "phpunit",
        "test-coverage": "phpunit --coverage-html build/coverage",
        "check-cs": "ecs check app tests --ansi",
        "fix-cs": "ecs check app tests --fix --ansi",
        "phpstan": "phpstan analyse --ansi"
    }
}